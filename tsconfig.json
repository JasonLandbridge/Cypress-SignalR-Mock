{
  "compilerOptions": {
    "target": "ES2019", // Needs to have this target otherwise nullish coalescing operator (??) will not work
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true, /* Skip type checking of declaration files. */

    "sourceMap": true,
    "incremental": true, /* Enable incremental compilation */
    "esModuleInterop": true, /* Enables intero between CommonJS and ES */
    "forceConsistentCasingInFileNames": true, /* Disallow inconsistently */
    "allowSyntheticDefaultImports": true,
    "declaration": true,  /* Concatenate & emit output to single file.*/
    "outDir": "./dist",
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* Types */
    "types": ["cypress", "node"]
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*", "cypress.d.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
